<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewUsernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="olanordmann"
        app:layout_constraintLeft_toRightOf="@+id/guidelineColumn2"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop"
        />

    <TextView
        android:id="@+id/textViewNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsernameLabel"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ola Nordmann"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsername"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineColumn2"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/textViewPublicReposLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public repos:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewNameLabel"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textViewPublicRepos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineColumn2" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineColumn2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="140dp"
        app:layout_constraintGuide_begin="140dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guidelineTop"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        app:layout_constraintGuide_begin="20dp"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>